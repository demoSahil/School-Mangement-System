<style>
    #notification {
        background-color: rgb(118, 200, 118);
        color: black;
        border: 2px solid black;
        border-radius: 2px 0 2px 0;
        display: flex;
        flex-direction: row;
        width: 9vw;
        float: inline-end;
    }

    p {
        font-weight: bold;
    }
</style>
<div id="notification" style="display:none">

    <p>@ViewData["ToastMessage"]</p>
</div>

<script>

    const toaster = document.getElementById('notification');
    const ptag = document.querySelector('#notification p');
    document.addEventListener('DOMContentLoaded', () => {
        if (ptag.textContent.length > 0) {
            toaster.style.display = 'flex';
            setTimeout(displayToast, 3000);
        }
    })
  

    function displayToast() {
        ptag.textContent = "";
        toaster.style.display = 'none';
        toaster.style.backgroundColor = 'Green';
    }

</script>
